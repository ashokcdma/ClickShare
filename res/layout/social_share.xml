<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:orientation="vertical" >

     <RelativeLayout
        android:layout_width="fill_parent"
        android:padding="6dip"
        android:layout_height="?android:attr/listPreferredItemHeight">
    
        <ImageView
            android:id="@+id/user_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="6dip"
            android:src="@drawable/com_facebook_logo" />
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_toRightOf="@id/user_pic"
            android:layout_alignParentRight="true" />
        
	    <com.facebook.widget.LoginButton
	        android:id="@+id/authButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:layout_alignBottom="@id/user_pic"
	        android:visibility="gone"
	        />
	    <Button 
	        android:id="@+id/facebook_share"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Share"/>
    </RelativeLayout>
    

     <RelativeLayout
        android:layout_width="fill_parent"
        android:padding="6dip"
        android:layout_height="?android:attr/listPreferredItemHeight">
    
        <ImageView
            android:id="@+id/twit_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="6dip"
            android:src="@drawable/com_facebook_logo" />
        <TextView
            android:id="@+id/twittxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_toRightOf="@id/twit_pic" />
        
	    <com.facebook.widget.LoginButton
	        android:id="@+id/twitAuthButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:layout_alignBottom="@id/twit_pic"
	        android:layout_alignParentRight="true"
	        />
    </RelativeLayout>
     <RelativeLayout
        android:layout_width="fill_parent"
        android:padding="6dip"
        android:layout_height="?android:attr/listPreferredItemHeight">
    
        <ImageView
            android:id="@+id/plus_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="6dip"
            android:src="@drawable/google_plus" />
        <TextView
            android:id="@+id/plus_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_toRightOf="@id/plus_pic" />
        
	    <com.google.android.gms.common.SignInButton
        android:id="@+id/plus_sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
	    android:layout_alignBottom="@id/plus_pic"
	    android:layout_alignParentRight="true"
	         />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:padding="6dip"
        android:layout_height="?android:attr/listPreferredItemHeight">
    
        <ImageView
            android:id="@+id/twitter_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="6dip"
            android:src="@drawable/twitter_bird" />
        <Button
            android:id="@+id/twitter_sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Authorize"
            android:layout_toRightOf="@id/twitter_pic" />
	    <Button
        android:id="@+id/twitter_tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Tweet"
	    android:layout_alignBottom="@id/twitter_pic"
	    android:layout_alignParentRight="true"
	         />
    </RelativeLayout>
</LinearLayout>
